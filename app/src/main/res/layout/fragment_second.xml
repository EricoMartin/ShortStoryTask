<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dawn"
    tools:context=".SecondFragment">

    <androidx.constraintlayout.motion.widget.MotionLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutDescription="@xml/fragment_second_xml_constraintlayout_scene">

        <ImageView
            android:id="@+id/image_cloud"
            android:layout_width="87dp"
            android:layout_height="69dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toStartOf="@+id/image_sun"
            app:layout_constraintHorizontal_bias="0.604"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_cloud_24" />

        <ImageView
            android:id="@+id/image_cloud4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toStartOf="@+id/image_cloud"
            app:layout_constraintHorizontal_bias="0.641"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_cloud_24" />


        <ImageView
            android:id="@+id/image_cloud3"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="48dp"
            app:layout_constraintStart_toEndOf="@+id/image_cloud"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_baseline_cloud_24" />

        <ImageView
            android:id="@+id/image_cloud2"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.407"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_cloud"
            app:srcCompat="@drawable/ic_baseline_cloud_24" />

        <ImageView
            android:id="@+id/image_cloud5"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginTop="68dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.614"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_cloud"
            app:srcCompat="@drawable/ic_baseline_cloud_24" />

        <ImageView
            android:id="@+id/image_man"
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.141"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_baseline_directions_bike_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="144dp"
            android:layout_height="117dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="456dp"
            android:background="@color/white"
            android:padding="8dp"
            android:text="@string/it_s_dawn_i_need_to_get_home"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/image_cloud4"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.motion.widget.MotionLayout>

</FrameLayout>